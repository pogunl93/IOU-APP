  %title="IOUAPP"

  %meta{:content => "", :name => "description"}
  %meta{:content => "", :name => "author"}
  %meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0;"}

  %script{:src => "/js/modernizr.min.js"}

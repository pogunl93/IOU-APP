%body
  .container
    .navbar
      .navbar-inner
        %a.brand{href: "/"}
          IOU APP
        %ul.nav
          %li
            %a{:href => "#"}
              Profile
          %li.dropdown
            %a.dropdown-toggle{:'data-toggle' => "dropdown", :href => "#{}"}
              Your Money
              %b.caret
            %ul.dropdown-menu{:'aria-labelledby' => "dLabel", :role => "menu"}
              %li
                %a.menu-item Lending Contracts
              %li
                %a.menu-item Borrow Contracts
              %li.divider
              %li
                %a.menu-item Due Contracts
          %li
            %a{:href => "#"} New Contract
        %ul.nav.pull-right
          -if current_user.nil?
            %li
              %a{:href => "/sign_in"} Log In
            %li
              %a{:href => "/sign_up"} Sign Up
          -else 
            %li
              %a{:href => "/sign_out"} Sign Out
      -if !flash[:notice].nil?
        .alert=flash[:notice]   
    = yield